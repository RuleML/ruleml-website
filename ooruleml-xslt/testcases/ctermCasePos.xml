<?xml version="1.0" encoding="UTF-8"?>
<rulebase>
	<!--Object-Oriented Signature for cterms-->
	<signature formula="cterm" world="open" order="sorted">
		<_data>
			<cterm>
				<_opc>
					<ctor>shipment</ctor>
				</_opc>
				<_r n="date">
					<ind/>
				</_r>
				<_r n="order">
					<cterm/>
				</_r>
				<_r n="orderNum">
					<ind/>
				</_r>
			</cterm>
		</_data>
	</signature>
	<signature formula="cterm" world="open" order="sorted">
		<_data>
			<cterm>
				<_opc>
					<ctor>order</ctor>
				</_opc>
				<_r n="automobile">
					<ind/>
				</_r>
				<_r n="orderNum">
					<ind/>
				</_r>
			</cterm>
		</_data>
	</signature>

	<fact>
		<_head>
			<atom>
				<cterm>
					<_opc>
						<ctor>order</ctor>
					</_opc>
					<ind/>
					<ind>3502653</ind>
				</cterm>
			</atom>
		</_head>
	</fact>	<!--Paritally complete shipment fact-->

	<fact>
		<_head>
			<atom>
				<cterm>
					<_opc>
						<ctor>shipment</ctor>
					</_opc>
					<ind>January</ind>
					<cterm/>
					<ind>3502653</ind>
				</cterm>
			</atom>
		</_head>
	</fact>	<!--Nested Cterms-->

	<fact>
		<_head>
			<atom>
				<cterm>
					<_opc>
						<ctor>shipment</ctor>
					</_opc>
					<cterm>
						<_opc>
							<ctor>order</ctor>
						</_opc>
						<ind/>
						<ind/>
					</cterm>
					<ind/>
					<cterm>
						<_opc>
							<ctor>order</ctor>
						</_opc>
						<ind/>
						<ind/>
					</cterm>
					<ind/>
				</cterm>
			</atom>
		</_head>
	</fact>	<!--Implementation of nested cterms-->

	<imp>
		<_head>
			<atom>
				<cterm>
					<_opc>
						<ctor>order</ctor>
					</_opc>
					<ind/>
					<ind>3502653</ind>
				</cterm>
			</atom>
		</_head>
		<_body>
			<and>
				<atom>
					<cterm>
						<_opc>
							<ctor>shipment</ctor>
						</_opc>
						<ind>January</ind>
						<cterm>
							<_opc>
								<ctor>order</ctor>
							</_opc>
							<var/>
							<ind>3502653</ind>
						</cterm>
						<ind>3502653</ind>
					</cterm>
				</atom>
			</and>
		</_body>
	</imp>	<!--Example of cterms within a query-->

	<query>
		<_body>
			<and>
				<atom>
					<cterm>
						<_opc>
							<ctor>shipment</ctor>
						</_opc>
						<var/>
						<var/>
						<ind>3502653</ind>
					</cterm>
				</atom>
			</and>
		</_body>
	</query>
</rulebase>